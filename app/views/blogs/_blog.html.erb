<div id="<%= dom_id blog %>">
  <p>
    <strong>Title:</strong>
    <%= blog.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= blog.body %>
  </p>

  <p>
    <strong>Username:</strong>
    <%= blog.username %>
  </p>

  <%# Uploaded image %>
  <% if blog.image.attached? %>
  <p>
    <strong>Uploaded Image:</strong>
    <%= image_tag url_for(blog.image), style: "max-width: 300px; height: auto;" %>
  </p>
  <% else %>
    <p class="bg-rose-500 text-amber-100">
      <strong>NO Image Attached</strong>
    </p>
  <% end %>

</div>
